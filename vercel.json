{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "REACT_APP_LD_CLIENT_SIDE_ID": "$REACT_APP_LD_CLIENT_SIDE_ID",
    "LAUNCHDARKLY_SDK_KEY": "$LAUNCHDARKLY_SDK_KEY",
    "OPENAI_API_KEY": "$OPENAI_API_KEY"
  }
}